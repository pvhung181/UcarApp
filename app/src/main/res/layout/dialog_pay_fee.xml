<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_4D000000">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:background="@drawable/bg_view_round"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/bg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="16dp"
                android:background="@drawable/bg_round_gradient"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCollectMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_semi_bold"
                android:paddingVertical="18dp"
                android:text="@string/collect_money"
                android:textColor="@color/color_007aff"
                android:textSize="22dp"
                app:layout_constraintEnd_toEndOf="@id/bg"
                app:layout_constraintStart_toStartOf="@id/bg"
                app:layout_constraintTop_toTopOf="@id/bg" />

            <View
                android:id="@+id/viewLine"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/color_9C9C9C"
                app:layout_constraintEnd_toEndOf="@id/bg"
                app:layout_constraintStart_toStartOf="@id/bg"
                app:layout_constraintTop_toBottomOf="@id/tvCollectMoney" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_semi_bold"
                android:paddingVertical="12dp"
                android:text="24,000 VND"
                android:textColor="@color/black"
                android:textSize="22dp"
                app:layout_constraintEnd_toEndOf="@id/bg"
                app:layout_constraintStart_toStartOf="@id/bg"
                app:layout_constraintTop_toBottomOf="@id/viewLine" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_regular"
                android:paddingVertical="12dp"
                android:text="24,000 VND"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="@id/bg"
                app:layout_constraintStart_toStartOf="@id/bg"
                app:layout_constraintTop_toBottomOf="@id/tvMoney" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnReceived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_semi_bold"
                android:paddingVertical="12dp"
                android:text="@string/payment_received"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:layout_marginVertical="18dp"
                android:background="@drawable/bg_view_round"
                android:backgroundTint="#5CCD57"
                android:paddingHorizontal="12dp"
                app:layout_constraintBottom_toBottomOf="@id/bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toBottomOf="@id/tvDes" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>