<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ripple_white_top_24">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="8dp"
            android:fontFamily="@font/sf_pro_display_semi_bold"
            android:gravity="center"
            android:text="@string/please_select_a_vehicle"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/bgMotobike"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/bg_ripple_stroke_f3f3f7_30"
            android:backgroundTint="#F1F4FF"
            app:layout_constraintBottom_toBottomOf="@id/tvMotobike"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvMotobike" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvMotobike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:drawableStart="@drawable/ic_motobike"
            android:drawablePadding="@dimen/_12sdp"
            android:fontFamily="@font/sf_pro_display_semi_bold"
            android:paddingVertical="@dimen/_12sdp"
            android:text="Motobike"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/bgMotobike"
            app:layout_constraintTop_toBottomOf="@id/tvTitle" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/sf_pro_display_semi_bold"
            android:gravity="end|center_vertical"
            android:includeFontPadding="false"
            android:paddingVertical="22dp"
            android:text="129$"
            android:textColor="@color/color_4376FA"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/tvMotobike"
            app:layout_constraintEnd_toEndOf="@+id/bgMotobike"
            app:layout_constraintTop_toTopOf="@id/tvMotobike" />

        <View
            android:id="@+id/bgCar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/bg_ripple_stroke_f3f3f7_30"
            app:layout_constraintBottom_toBottomOf="@id/tvCar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvCar" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:drawableStart="@drawable/ic_car"
            android:drawablePadding="@dimen/_12sdp"
            android:fontFamily="@font/sf_pro_display_semi_bold"
            android:paddingVertical="@dimen/_12sdp"
            android:text="Car"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/bgMotobike"
            app:layout_constraintTop_toBottomOf="@id/tvMotobike" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPriceCar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/sf_pro_display_semi_bold"
            android:gravity="end|center_vertical"
            android:includeFontPadding="false"
            android:paddingVertical="22dp"
            android:text="129$"
            android:textColor="@color/color_4376FA"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/bgCar"
            app:layout_constraintEnd_toEndOf="@+id/bgCar"
            app:layout_constraintTop_toTopOf="@id/bgCar" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bookingBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_ripple_white_round_6"
            android:backgroundTint="@color/color_38b6ff"
            android:fontFamily="@font/sf_pro_display_semi_bold"
            android:text="@string/book"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvCar" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>